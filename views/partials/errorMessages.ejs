<% if(typeof errors != 'undefined') { %>
    <% errors.forEach(function(error) { %>
        <div class="alert alert-warning alert-dismissible fade show" style="width: 500px; display:inline-block;" role="alert">
            <%= error.msg %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
          <br>
    <%}) %>
<% } %>


<% if(success_msg != '') { %>
    <div class="alert alert-success alert-dismissible fade show" style="width: 500px; display:inline-block;" role="alert">
        <%= success_msg %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
      <br>
<%} %>


<% if(err_msg != '') { %>
    <div class=" text-center alert alert-warning alert-dismissible fade show" style="width: 500px; display:inline-block;" role="alert">
        <%= err_msg %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
      <br>
<%} %>


<% if(error != '') { %>
    <div class="alert alert-warning alert-dismissible fade show" style="width: 500px; display:inline-block;" role="alert">
        <%= error %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
      <br>
<%} %>